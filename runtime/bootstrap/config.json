{
  "logging": {
    "level": "INFO",
    "base_dir": "./logs"
  },
  "memory": {
    "episodic": {
      "backend": "redis",
      "redis": {
        "url": "redis://localhost:6379/0",
        "namespace": "agentic_episodic",
        "ttl_seconds": 86400
      }
    },
    "semantic": {
      "backend": "langmem",
      "langmem": {
        "use_embeddings": true,
        "embedding_backend": "postgres",
        "collections": ["default", "workspace1", "workspace2"]
      },
      "schemas": [
        "ProposalMemory",
        "CritiqueMemory",
        "SynthesizerMemory",
        "SemanticMemory",
        "EpisodicMemory"
      ]
    }
  }
}
