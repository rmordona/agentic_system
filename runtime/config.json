{
  "logging": {
    "level": "INFO",
    "base_dir": "./logs"
  },

  "llm": {
    "provider": "local",
    "model": {
      "model_name" : "qwen2.5-coder:3b",
      "endpoint" : "http://localhost:11434/api/chat",
      "temperature": 0.2,
      "max_tokens": 4096
    }
  },
  "embeddings": {
    "backend": "postgres",
    "chromadb": {
      "persist_directory": "./data/chromadb",
      "collections": ["embedding1", "embedding2"],
      "embedding_model": "nomic-embed-text",
      "dims": 768
    },
    "postgres": {
      "dsn": "postgresql://username:password@localhost:5432/agentic_embeddings",
      "persist_directory": "./data/postgres",
      "collections": ["embedding1", "embedding2"],
      "embedding_model": "nomic-embed-text", 
      "dims": 768
    }
  },

  "memory": {
    "episodic": {
      "backend": "redis",
      "redis": {
        "url": "redis://localhost:6379/0",
        "namespace": "agentic_episodic",
        "ttl_seconds": 86400
      }
    },
    "semantic": {
      "backend": "langmem",
      "langmem": {
        "use_embeddings": true,
        "embedding_backend": "postgres",
        "collections": ["default", "workspace1", "workspace2"]
      },
      "schemas": [
        "ProposalMemory",
        "CritiqueMemory",
        "SynthesizerMemory",
        "SemanticMemory",
        "EpisodicMemory"
      ]
    }
  }
}
